<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"

    android:layout_marginBottom="10dp"
    android:background="@drawable/common_google_signin_btn_icon_light_normal_background"
    android:orientation="vertical"
    android:paddingLeft="8dp"
    android:paddingBottom="25dp">

    <!--
        Идентификатор продукта id
        (pid) - будет HIDDEN - используется для передачи в другой activity -->

    <TextView
        android:id="@+id/pid"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <TextView
        android:id="@+id/name"
        android:textColor="@color/title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="6dip"
        android:paddingTop="6dip"
        android:textSize="19dip"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/skid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="6dp"
            android:background="@color/yelow"
            android:padding="2dp"
            android:text="100%"
            android:textColor="@color/white"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/desriptionsidka"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="6dip"
            android:paddingTop="6dip"
            android:text="истекает через 10 дней"
            android:textColor="@color/gray"
            android:textSize="12dip" />
        <TextView
            android:id="@+id/link"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="6dip"
            android:paddingTop="6dip"
            android:text="link"
            android:visibility="gone"
            android:textColor="@color/gray"
            android:textSize="12dip" />
        <TextView
            android:id="@+id/promocode"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="6dip"
            android:visibility="gone"
            android:paddingTop="6dip"
            android:text="promocode"
            android:textColor="@color/gray"
            android:textSize="12dip" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="100dp"
        android:paddingTop="15dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_weight="5"
            app:srcCompat="@drawable/fire" />

        <TextView
            android:id="@+id/rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:gravity="left"
            android:paddingLeft="1dp"
            android:paddingTop="1dp"
            android:text="0"
            android:textSize="20dp" />
    </LinearLayout>
</LinearLayout>